{% block modal %}
<div class="modal hidden">
  <div class="wrapper-form wrapper-sign-in">
    <div class="header">
      <div class="title">
        Sign In to Flutter
      </div>
      <div class="close-btn">
        <i class="material-icons">clear</i>
      </div>
    </div>
    <form action="{{ path_for('sign-in') }}" method="post" class="form form-sign-in">
      <i class="material-icons">sentiment_very_satisfied</i>
      <p>
        Have an account? Sign in here.
      </p>
      <div>
        <input class="email-sign-in" name="email" type="text" autofocus /><p></p><!-- next to input for form validation -->
      </div>
      <div>
        <input class="password-sign-in" name="password" type="password" /><p></p><!-- next to input for form validation -->
      </div>
      <input type="submit" value="Sign In">
    </form>
  </div><!-- end sign in -->
</div><!-- end modal -->
{% endblock %}
