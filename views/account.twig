{% extends 'templates/app.twig' %}

{% block nav %}
{% if auth.check %}
  <li class="sign-out">
    <a href="{{ path_for('sign-out') }}">Sign Out</a>
  </li>
  <li class="user-name">
    <p>{{ auth.user.email }}</p>
  </li>
{% else %}
  <li>
    <p>Not Logged In</p>
  </li>
{% endif %}
<li>
  <a class="show-modal" href="#0">
    <i class="material-icons">mode_edit</i>
  </a>
</li>
{% endblock %}

{% block app %}
<div class="buffer"></div>

{% for flutters in auth.flutter %}
  <div class="wrapper-post">
    <div data="{{ flutters.id }}" class="post">
      <div class="user-info">
        <img src="images/flutter.jpeg" />
        {{ auth.user.email }}
        <i class="delete-flutter material-icons">clear</i>
      </div>
      <p>
        {{ flutters.text_area }}
      </p>
    </div>
  </div>
{% endfor %}

<div class="modal hidden">
  <div class="wrapper-form wrapper-create-post">
    <div class="header">
      <div class="close-btn">
        <i class="material-icons">clear</i>
      </div>
    </div>
    <form action="{{ path_for('account') }}" method="post" class="form">
      <p>
        What's up?
      </p>
      <div>
        <textarea name="text_area" placeholder="140 characters or less..." autofocus /></textarea><p></p><!-- next to input for form validation -->
      </div>
      <input type="submit" value="Flutter">
    </form>
  </div><!-- end sign in -->
</div><!-- end modal -->
{% endblock %}
